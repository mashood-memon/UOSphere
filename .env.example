# Database
DATABASE_URL="postgresql://user:password@localhost:5432/uosphere"

# NextAuth v5 (generate with: openssl rand -base64 32)
AUTH_SECRET="your-secret-key-here"
# CRITICAL: In production (Vercel), set this to your actual domain!
# Supports both NEXTAUTH_URL or AUTH_URL (either name works)
# Example: NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_URL="http://localhost:3000"

# Resend Email Service (get free API key at resend.com)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"

# Cloudinary
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# Pusher
NEXT_PUBLIC_PUSHER_KEY="your-pusher-key"
PUSHER_SECRET="your-pusher-secret"
PUSHER_APP_ID="your-app-id"
NEXT_PUBLIC_PUSHER_CLUSTER="ap2"

# Azure Document Intelligence (required for ID card OCR)
AZURE_DOCUMENT_INTELLIGENCE_KEY="your-azure-document-intelligence-key"
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT="your-azure-document-intelligence-endpoint"
